---
layout: layouts/blog.njk
title: Bloggy-posties
pagination:
  data: collections.posts
  size: 12
  reverse: true
---

{% from '_post.njk' import postItem %}

{% macro navLink(href, content) %}
  <a class="font-smallcaps transition-colors hover:text-pank" href="{{ href }}"
    >{{ content }}</a
  >
{% endmacro %}

<ul class="space-y-8">
  {% for post in pagination.items %}
    <li>{{ postItem(post) }}</li>
  {% endfor %}
</ul>

<div class="grid grid-cols-2 transition-colors">
  <div>
    {% if pagination.href.previous %}
      {{ navLink(pagination.href.previous, "« Newer posts") }}
    {% endif %}
  </div>
  <div class="text-right">
    {% if pagination.href.next %}
      {{ navLink(pagination.href.next, 'Older posts »') }}
    {% endif %}
  </div>
</div>
